<!doctype html>
<html lang="en">

<head>
    <title>Login | Cargoa</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <link rel="stylesheet" href="/styles/login.css">
    <script src="https://kit.fontawesome.com/8182a1e71b.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <!-- place navbar here -->
    </header>
    <main>
        <h1>Login Page</h1>
        <div class="btnn">
            <a href="/" id="back">Back</a>
        </div>
        <div class="container">
            <div class="wrapper">
                <div class="content-wrapper">
                    <form class="login" action="/login" method="post">
                        <div class="input-wrapper">
                            <i class="login_icon fa-solid fa-user-secret"></i>
                            <label for="role" class="input-field">What is your Role? </label>

                            <select class="login_input input_select" id="role" name="role">
                                <option value="Transporter">Transporter</option>
                                <option value="Manufacturer">Manufacturer </option>

                            </select><br>
                        </div>
                        <div class="input-wrapper">
                            <i class="login_icon fa-solid fa-user"></i>
                            <input class="login_input" type="email" name="logemail" class="input-field"
                                placeholder="Enter your Email" required>
                        </div>
                        <div class="input-wrapper">
                            <i class="login_icon fa-solid fa-lock"></i>
                            <input class="login_input" type="password" name="logpass" class="input-field"
                                placeholder="Enter Password" required maxlength="16">
                        </div>
                        <button type="submit" class="submit_button"><span>Log In</span>
                            <div class="arrow-wrapper">
                                <div class="arrow"></div>
                            </div>
                        </button>
                        <p class="signup_para">No account?<a href="/signup" class="signup_link">Sign Up!</a></p>
                        <br>
                        <p class="signup_para">Forgot Password ? <a href="/login/forgot" class="signup_link">Change Your
                                Password</a></p>
                    </form>

                </div>
                <div class="background-wrapper">
                    <span class="background-shape background-shape-4"></span>
                    <span class="background-shape background-shape-3"></span>
                    <span class="background-shape background-shape-2"></span>
                    <span class="background-shape background-shape-1"></span>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
        </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>
</body>

</html>